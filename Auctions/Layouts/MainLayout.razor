@inherits LayoutComponentBase

@using EFCAT.Service.Authentication
@using Model.Entity
@using MudBlazor
@using Services
@inject AuthenticationStateProvider AuthProvider

<PageTitle>Auctions</PageTitle>

<CascadingValue Value="Account" IsFixed=true>
    <NavMenu />

    <main class="my-2">
        <MudThemeProvider />
        <MudDialogProvider />
        <MudSnackbarProvider />
        @Body
    </main>

    <FooterMenu />
</CascadingValue>

@code {
    IAuthenticationService<User> Auth { get => ((IAuthenticationService<User>)AuthProvider); }
    User Account { get => Auth.GetAccount() ?? new User(); }
}